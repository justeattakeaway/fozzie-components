{
    "version": "0.2.0",
    "configurations": [    
        {
            "type": "node",
            "request": "launch",
            "name": "Run Single Spec - Unit",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--runTestsByPath ${relativeFile}", "--config", "${fileDirname}/../../../jest.config.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "windows": {
              "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            }
        },
        {
            "name": "Run Single Spec - Visual - Chrome",
            "type": "node",
            "request": "launch",
            "args": ["wdio-chrome.conf.js", "--spec", "${file}"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "JE_ENV": "test",
                "TEST_TYPE": "visual",
                "SPEC_FILE": "${file}"
            }
        },
        {
            "name": "Run Single Spec - Component - Chrome",
            "type": "node",
            "request": "launch",
            "args": ["wdio-chrome.conf.js", "--spec", "${file}"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "JE_ENV": "local",
                "TEST_TYPE": "component",
                "VS_DEBUGGER": "true",
                "SPEC_FILE": "${file}"
            }
        },
        {
            "name": "Run Single Spec - Accessibility - Chrome",
            "type": "node",
            "request": "launch",
            "args": ["wdio-chrome.conf.js", "--spec", "${file}"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "env": {
                "JE_ENV": "local",
                "TEST_TYPE": "accessibility",
                "VS_DEBUGGER": "true",
                "SPEC_FILE": "${file}"
            }
        },
        {
            "name": "Storybook - Run Currently Open Story File",
            "type": "node",
            "request": "launch",
            "args": ["run", "storybook:serve", "--stream"],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/.bin/lerna",
            "console": "integratedTerminal",
            "env": {
                "VS_DEBUGGER": "true",
                "CURRENT_STORY_FILE": "${file}"
            }
        }
    ]
}