    "@justeat/f-wdio-utils": "0.5.0",
    "@samhammer/vue-cli-plugin-stylelint": "2.1.0",
    "@vue/cli-plugin-babel": "4.5.15",
    "@vue/cli-plugin-unit-jest": "4.5.15",
    "@vue/test-utils": "1.2.2"
  }
