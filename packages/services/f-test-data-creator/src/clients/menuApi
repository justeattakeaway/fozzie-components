const axios = require('axios');

module.exports = class MenuApiService {
    constructor (configuration) {
        this.getMenuUrl = configuration.Services.Menu.BaseAddress;
        this.tenant = configuration.tenant;
    }

    async getRestaurantManifest(restaurantSEO, tenant, timeout = 5000) {
        const config = {
            headers: {
                'Content-Type': 'application/json'
            },
            timeout
        };

        return axios.get(`${this.getMenuUrl}/v2/${restaurantSEO}_${tenant}_manifest.json`, config)
        .catch(error => {
            console.log('hellooo, there is an error here', error);
        });
    } 
}

